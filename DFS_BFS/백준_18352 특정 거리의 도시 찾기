import sys
input = sys.stdin.readline

n, m, k, x = map(int, input().split())
roads=[[] for i in range(n+1)]

for i in range(1, m+1):
    a, b = map(int, input().split())
    roads[a].append(b)

from collections import deque

queue=deque()
res = False

def bfs(x):
    global res
    queue.append(x)
    count=0
    while len(queue)>0:
        x= queue.popleft()
        count+=1
        for j in roads[x]:
            if j not in queue:
                queue.append(j)
                if count==k:
                    res = True
                    print(j)

bfs(x)

if res== False:
    print(-1)